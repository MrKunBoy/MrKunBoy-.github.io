@model ModelEF.Model.Product

@{
    ViewBag.Title = "View";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    var category = (ModelEF.Model.Product)ViewBag.Category;

}

@section header{
    <i class="fa fa-user "></i>&nbsp;Chi tiết sản phẩm
}

@using (Html.BeginForm("ChiTietSP", "SanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="col-md-12 form-group">
            <div class="col-md-6">
                <p>
                    @Html.ActionLink("Quay lại", "Index", "SanPham", new { @class = "btn btn-primary" })
                </p>
            </div>
        </div>
        <div class="col-md-12 form-group">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @category.Name

                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.UnitCost)
                </dt>

                <dd>
                    @category.UnitCost
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Quantity)
                </dt>

                <dd>
                    @category.Quantity
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Image)
                </dt>

                <dd>
                    <img src="~/@Url.Content(category.Image)" alt="Image" style="width:100px; height:100px"  />
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @category.Description
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Status)
                </dt>

                <dd>
                    @category.Status
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.CategoryID)
                </dt>

                <dd>
                    @category.CategoryID
                </dd>

            </dl>
        </div>
        </div>
        @*<p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
            @Html.ActionLink("Back to List", "Index")
        </p>*@
        }
